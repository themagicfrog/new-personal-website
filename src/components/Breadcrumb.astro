---
interface Props {
	items: Array<{ text: string; href?: string }>;
}

const { items } = Astro.props;
---

<nav class="breadcrumb">
	{items.map((item, index) => (
		<>
			{item.href ? <a href={item.href}>{item.text}</a> : <span>{item.text}</span>}
			{index < items.length - 1 && <span> -> </span>}
		</>
	))}
</nav>

<style is:global>
	.breadcrumb {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		font-family: 'Dekko', sans-serif;
		font-size: 1.5rem;
		color: var(--text-color);
		z-index: 10;
		padding: 1rem var(--box-padding);
		background-color: #8ad081;
	}

	.breadcrumb a {
		color: var(--text-color);
		text-decoration: none;
		transition: opacity 0.2s;
	}

	.breadcrumb a:hover {
		opacity: 0.7;
	}

	@media (max-width: 768px) {
		.breadcrumb {
			top: 8px;
			font-size: 1.2rem;
			padding: 0.8rem var(--box-padding);
		}
	}

	@media (max-width: 480px) {
		.breadcrumb {
			top: 5px;
			font-size: 1rem;
			padding: 0.6rem var(--box-padding);
		}
	}
</style>

