---
import PageLayout from '../layouts/PageLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import CloudBanner from '../components/CloudBanner.astro';
import { supabase, type Art } from '../lib/supabase';

let artPieces: Art[] = [];

try {
	const { data, error } = await supabase
		.from('art')
		.select('*')
		.order('date', { ascending: false });

	if (error) {
		console.error('Error fetching art:', error);
	} else {
		artPieces = (data || []).map((art: any) => ({
			...art,
			images: Array.isArray(art.images) ? art.images : []
		}));
	}
} catch (err) {
	console.error('Failed to fetch art:', err);
}
---

<PageLayout title="Art - Estella Gu">
	<Breadcrumb items={[
		{ text: 'home', href: '/' },
		{ text: 'art' }
	]} />
	<CloudBanner />
	<div class="box-content art-page">
		<h1>art</h1>
		{artPieces.length === 0 ? (
			<p>no art pieces</p>
		) : (
			<div class="art-list">
				{artPieces.map((art) => (
					<article class="art-card">
						<div class="art-header">
							<h2>{art.title}</h2>
							{art.date && (
								<time class="art-date">{new Date(art.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
							)}
						</div>
						{art.images && art.images.length > 0 && (
							<div class="art-images-carousel">
								{art.images.map((image: string, index: number) => (
									<img 
										src={image} 
										alt={`${art.title} - Image ${index + 1}`} 
										loading="lazy"
										class={index === 0 ? 'active' : ''}
									/>
								))}
								{art.images.length > 1 && (
									<div class="carousel-indicators">
										{art.images.map((_, index: number) => (
											<span class={`indicator ${index === 0 ? 'active' : ''}`}></span>
										))}
									</div>
								)}
							</div>
						)}
						{art.caption && (
							<p class="art-caption">{art.caption}</p>
						)}
					</article>
				))}
			</div>
		)}
	</div>
</PageLayout>

<style>
	.art-page {
		flex-direction: column;
	}

	.art-page h1 {
		margin-bottom: 1rem;
	}

	.art-list {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2rem;
		margin-top: 0.2rem;
	}

	.art-card {
		border: 2px solid var(--text-color);
		border-radius: 10px;
		padding: 2.5rem;
		background-color: #fafafa;
	}

	.art-header {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		margin-bottom: 1rem;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.art-card h2 {
		font-family: 'DynaPuff', sans-serif;
		font-size: 2rem;
		margin: 0;
		color: var(--text-color);
	}

	.art-date {
		font-family: 'Dekko', sans-serif;
		font-size: 1rem;
		color: var(--text-color);
		opacity: 0.7;
	}

	.art-images-carousel {
		position: relative;
		width: 100%;
		aspect-ratio: 16 / 9;
		margin: 1.5rem 0;
		border-radius: 8px;
		border: 1px solid var(--text-color);
		overflow: hidden;
		cursor: pointer;
	}

	.art-images-carousel img {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		opacity: 0;
		transition: opacity 0.5s ease-in-out;
		pointer-events: none;
	}

	.art-images-carousel img.active {
		opacity: 1;
		z-index: 1;
	}

	.carousel-indicators {
		position: absolute;
		bottom: 1rem;
		left: 50%;
		transform: translateX(-50%);
		display: flex;
		gap: 0.5rem;
		z-index: 2;
	}

	.carousel-indicators .indicator {
		width: 8px;
		height: 8px;
		border-radius: 50%;
		background-color: rgba(255, 255, 255, 0.5);
		border: 1px solid var(--text-color);
		cursor: pointer;
		transition: background-color 0.3s;
	}

	.carousel-indicators .indicator.active {
		background-color: var(--text-color);
	}

	.art-caption {
		font-family: 'Dekko', sans-serif;
		font-size: 1.1rem;
		line-height: 1.6;
		margin: 1rem 0 0 0;
		color: var(--text-color);
		opacity: 0.8;
		font-style: italic;
	}

	@media (max-width: 768px) {
		.art-list {
			grid-template-columns: 1fr;
		}

		.art-card {
			padding: 1.5rem;
		}

		.art-card h2 {
			font-size: 1.4rem;
		}

		.art-images-carousel {
			aspect-ratio: 4 / 3;
		}
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const carousels = document.querySelectorAll('.art-images-carousel');
		
		carousels.forEach((carousel) => {
			const images = carousel.querySelectorAll('img');
			const indicators = carousel.querySelectorAll('.indicator');
			let currentIndex = 0;
			let hoverInterval: number | null = null;
			const imageCount = images.length;

			if (imageCount <= 1) return;

			const showImage = (index: number) => {
				images.forEach((img, i) => img.classList.toggle('active', i === index));
				indicators.forEach((indicator, i) => indicator.classList.toggle('active', i === index));
			};

			const nextImage = () => {
				currentIndex = (currentIndex + 1) % imageCount;
				showImage(currentIndex);
			};

			carousel.addEventListener('mouseenter', () => {
				hoverInterval = window.setInterval(nextImage, 2000);
			});

			carousel.addEventListener('mouseleave', () => {
				if (hoverInterval) {
					clearInterval(hoverInterval);
					hoverInterval = null;
				}
			});

			indicators.forEach((indicator, index) => {
				indicator.addEventListener('click', (e) => {
					e.stopPropagation();
					currentIndex = index;
					showImage(currentIndex);
				});
			});
		});
	});
</script>

